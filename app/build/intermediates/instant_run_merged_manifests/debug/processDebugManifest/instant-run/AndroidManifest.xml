<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dell.booklibrary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@drawable/logo_1squtor"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_1squtor"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.dell.booklibrary.activity.MainActivity" />
        <activity
            android:name="com.example.dell.booklibrary.activity.DetailActivity"
            android:parentActivityName="com.example.dell.booklibrary.activity.MainActivity" />
        <activity android:name="com.example.dell.booklibrary.activity.LoginActivity" />
        <activity android:name="com.example.dell.booklibrary.activity.IntroSliderActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.dell.booklibrary.activity.UpdateProfileActivity" />
        <activity android:name="com.example.dell.booklibrary.activity.RegisterActivity" />
        <activity android:name="com.example.dell.booklibrary.activity.BookAddActivity" />
        <activity android:name="com.example.dell.booklibrary.activity.BookEditActivity" />

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:exported="false" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.dell.booklibrary.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>