<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DetailActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarRV"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:elevation="10dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </com.google.android.material.appbar.AppBarLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="5dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="15dp">
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="10dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/dtbookimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/album_title_padding"
            android:background="@drawable/logo"
            />




        <TextView
            android:id="@+id/lbdtbookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dtbookimage"
            android:layout_marginRight="@dimen/album_title_padding"
            android:text="Title :"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/etdtbookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSave"
            android:layout_alignTop="@+id/lbdtbookName"
            android:layout_toRightOf="@+id/lbdtbookName"
            android:text="Book Name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbdtauthorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbdtbookName"
            android:layout_marginRight="@dimen/album_title_padding"
            android:text="Author :"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/etdtauthorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etdtbookName"
            android:layout_alignTop="@+id/lbdtauthorName"
            android:layout_alignLeft="@+id/etdtbookName"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/lbauthorName"
            android:text="Author Name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbdtprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbdtauthorName"
            android:layout_marginRight="@dimen/album_title_padding"
            android:text="Price    :"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/etdtprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etdtauthorName"
            android:layout_toRightOf="@id/lbdtprice"
            android:layout_alignTop="@+id/lbdtprice"
            android:text="3000"
            android:layout_alignLeft="@+id/etdtauthorName"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbdtreleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbdtprice"
            android:layout_marginRight="@dimen/album_title_padding"
            android:text="Release Date :"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/etdtreleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etdtprice"
            android:layout_toRightOf="@id/lbdtreleaseDate"
            android:text="22-10-2019"
            android:layout_alignTop="@+id/lbdtreleaseDate"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/lbdtCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbdtreleaseDate"
            android:layout_marginRight="@dimen/album_title_padding"
            android:text="Category :"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/dtcategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etdtreleaseDate"
            android:layout_toRightOf="@id/lbdtCategory"
            android:text="Thriller"
            android:layout_alignTop="@+id/lbdtCategory"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lbdtSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbdtCategory"
            android:layout_marginRight="@dimen/album_title_padding"
            android:text="Summary :"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/etdtsummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbdtSummary"
             android:text="This is summary of the book."
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_medium"
            />
        <Button
            android:id="@+id/btndtDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etdtsummary"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="3dp"

            android:text="Delete"
            android:textSize="18dp" />
        <Button
            android:id="@+id/btndtEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etdtsummary"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="3dp"

            android:text="Edit"
            android:textSize="18dp" />

    </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>