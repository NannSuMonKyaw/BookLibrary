<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".activity.LoginActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/Qcard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        android:elevation="10dp"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="25dp">

        <RelativeLayout
            android:id="@+id/cardrelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/rguserProfileImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logo_1squtor"
                android:layout_marginBottom="10dp" />
            <TextView
                android:id="@+id/UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rguserProfileImage"

                android:layout_marginTop="3dp"

                android:text="User Name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:padding="@dimen/album_title_padding"/>


            <EditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/UserName"
                android:layout_centerInParent="true"
                android:padding="@dimen/album_title_padding"
                android:hint="UserName"/>
            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etUserName"

                android:layout_marginTop="3dp"

                android:text="Password"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:padding="@dimen/album_title_padding"/>


            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/password"
                android:inputType="textPassword"
                android:padding="@dimen/album_title_padding"
                android:hint="Password"/>








            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Login In"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="3dp"
                android:textSize="18dp" />
            <Button
                android:id="@+id/Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnLogin"
                android:layout_centerHorizontal="true"
                android:text="Register"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:padding="@dimen/album_title_padding"/>




        </RelativeLayout>

    </android.support.v7.widget.CardView>


</android.support.design.widget.CoordinatorLayout>